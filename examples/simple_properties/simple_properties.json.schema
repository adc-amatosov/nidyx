{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "array",
    "boolean",
    "integer",
    "number",
    "string",
    "object"
  ],
  "properties": {
    "array": {
      "type": "array",
      "items": { "type": "string" }
    },
    "boolean": {
      "type": "boolean"
    },
    "integer": {
      "description": "this is a comment that will show up as documentation",
      "type": "integer"
    },
    "number": {
      "description": "this is another comment with some 'special characters'",
      "type": "number"
    },
    "string": {
      "type": "string"
    },
    "object": {
      "type": "object",
      "required": [ "value" ],
      "properties": {
        "value": {
          "type": "string"
        }
      }
    }
  }
}
